@model ArticleModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
@using (Html.BeginForm())
{
    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("The following errors were found:", new {@class = "alert alert-danger"})
    
    <div class="new-article-modal" id="new-article-modal">
        <div class="new-article-modal-image-box">
            <img src="~/images/vector-Search.png" alt="Search-Icon">
        </div>
        
        <button type="submit" class="btn btn-success btn-lg margin-right">
            <span class="glyphicon glyphicon-save"></span> Save
        </button>
        
        @*todo Create functions to check if name and price are null or whitespace > exception*@
        @*Inputs fields and labels*@
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new {@class = "new-article-modal-name-input-label "})
                @Html.TextBoxFor(model => model.Name, new {@class = "new-article-modal-name-input "})
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Category, new {@class = "new-article-modal-category-input-label "})
                @Html.TextBoxFor(model => model.Category, new {@class = "new-article-modal-category-input"})
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Price, new {@class = "new-new-article-modal-description-input-label"})
                @Html.TextBoxFor(model => model.Price, new {@class = "new-article-modal-description-input"})
            </div>
            
              <div class="form-group">
                  @Html.LabelFor(model => model.Description, new {@class = "new-article-modal-D"})
                  @Html.TextBoxFor(model => model.Description, new {@class = "new-article-modal-add-img-input"})
              </div>          
        
            <div class="form-group">
                @Html.LabelFor(model => model.ImgRef, new {@class = "new-article-modal-add-img-input"})
                @Html.TextBoxFor(model => model.ImgRef, new {@class = "new-article-modal-add-img-input"})
            </div>
            
                <div class="exit-cross-container">
                    <img src="~/images/exit-Cross.png" alt="Exit-Cross" onclick="hideElement('new-article-modal')">
                </div>
    </div>
}
</body>
</html>