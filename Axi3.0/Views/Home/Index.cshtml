@model TestViewModel

@{
    // Page for Proof of concept to check if DBconnection works

    ViewData["Title"] = "Home Page";
    Layout = null;
}

<link rel="stylesheet" href="~/css/stylesheet.css" asp-append-version="true"/>

<body>
