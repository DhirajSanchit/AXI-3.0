@model ArticleViewModel
@{
    ViewData["Title"] = "Stock";
    Layout = "_Layout";
}
<body>
@* Button to add article *@
<div class="btn-add-article btn-active" onclick="showElement('new-article-modal'); showElement('modal-background')">
    <p>Add Article</p>
</div>
@* searchbar *@
<input type="text" class="search-bar" placeholder="Type to start searching...">
@*Sheet containing info about articles*@
<div class="sheet-top">
    <div class="name-column-top">Name</div>
    <div class="id-column-top">ID</div>
    <div class="quantity-column-top">Quantity</div>
    <div class="category-column-top">Category</div>
    <div class="location-column-top">Location</div>
</div>
<div class="article-sheet">
    @*For loop to create divs containing article info*@
    @if (Model.ArticleModels.Any())
    {
        foreach(var article in Model.ArticleModels)
        {
            <div class="name-column" onclick="showElement('view-article-modal'); showElement('modal-background')">@article.Name</div>
            <div class="id-column" onclick="showElement('view-article-modal'); showElement('modal-background')">@article.Id</div>
            <div class="category-column" onclick="showElement('view-article-modal'); showElement('modal-background')">@article.Category</div>
        }
    }
</div>
<div class="modal-background" id="modal-background" onclick="hideElement('new-article-modal'); hideElement('view-article-modal'); hideElement('modal-background')"></div>
@*Modal for adding a new article*@
<div class="new-article-modal" id="new-article-modal">
    <div class="new-article-modal-image-box">
        <img src="~/images/vector-Search.png" alt="Search-Icon">
    </div>
    <div class="btn-add-modal-img btn-active">
        <h4>Add Image</h4>
    </div>
    <div class="btn-submit-article btn-active" onclick="showElement('new-article-modal')">
        <h4>Submit Article</h4>
    </div>
    @*Inputs fields and labels*@
    <p class="new-article-modal-name-input-label">Name:</p>
    <input class="new-article-modal-name-input">
    <p class="new-article-modal-category-input-label">Category:</p>
    <input class="new-article-modal-category-input">
    <p class="new-article-modal-price-input-label">Price:</p>
    <input class="new-article-modal-price-input">
    <div class="exit-cross-container">
        <img src="~/images/exit-Cross.png" alt="Exit-Cross" onclick="hideElement('new-article-modal')">
    </div>
    <form>
        <textarea class="new-article-modal-description-input" placeholder="Description"></textarea>
    </form>
</div>
@*Modal for showing existing articles*@
<div class="view-article-modal" id="view-article-modal">
    <div class="view-article-modal-image-box">
        <img src="~/images/vector-Search.png" alt="Search-Icon">
    </div>
    <div class="exit-cross-container">
        <img src="~/images/exit-Cross.png" alt="Exit-Cross" onclick="hideElement('view-article-modal')">
    </div>
    <p class="view-article-modal-name-label">!Name!</p>
    <p class="view-article-modal-category-label">!Category</p>
    <h4 class="view-article-modal-price-label">!Price!</h4>
    <textarea class="view-article-modal-textarea">!Description!</textarea>
</div>
</body>